<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> - Gaming Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <link rel="stylesheet" href="/stylesheets/admin.css" />
  </head>
  <body class="d-flex flex-column min-vh-100">
    <%- include('components/navbar') %>
    <main class="main-content flex-grow-1">
      <div class="container-fluid">
        <div class="row">
        <!-- Sidebar para el admin (queda mejor) -->
        <div class="col-md-3 col-lg-2 bg-primary sidebar-admin">
          <div class="p-3">
            <h5 class="text-white mb-3">
              <i class="fas fa-tools me-2"></i>Admin Panel
            </h5>
            <ul class="list-unstyled">
              <li class="mb-2">
                <a
                  href="/admin/dashboard"
                  class="btn btn-outline-light w-100 text-start"
                >
                  <i class="fas fa-chart-bar me-2"></i>Dashboard
                </a>
              </li>
              <li class="mb-2">
                <a
                  href="/admin/dashboard/products"
                  class="btn btn-outline-light w-100 text-start"
                >
                  <i class="fas fa-boxes me-2"></i>Products
                </a>
              </li>
              <li class="mb-2">
                <button class="btn btn-outline-light w-100 text-start" disabled>
                  <i class="fas fa-receipt me-2"></i>Sales (Soon)
                </button>
              </li>
              <li class="mb-2">
                <a
                  href="/"
                  target="_blank"
                  class="btn btn-outline-light w-100 text-start"
                >
                  <i class="fas fa-store me-2"></i>View Store
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Contenido principal del layout -->
      <div class="col-md-9 col-lg-10">
        <div class="p-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><%= title %></h2>
            <small class="text-muted">
              <i class="fas fa-calendar me-1"></i>
              <!-- Funcion para mostrar la fecha actual -->
              <%= new Date().toLocaleDateString('es-ES') %>
            </small>
          </div>

          <!-- Alertas -->
          <%- include('components/header') %>

          <!-- Contenido-->
          <%- body %>
        </div>
      </div>
    </main>
    </div>
    <!-- footer -->
    <%- include('components/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Este script lo agarre de mi proyecto que sirve para esconder los alerts dsp de 5 segundos -->
    <script>
      setTimeout(function () {
        var alerts = document.querySelectorAll(".alert");
        alerts.forEach(function (alert) {
          var bsAlert = new bootstrap.Alert(alert);
          bsAlert.close();
        });
      }, 5000);
    </script>
  </body>
</html>
