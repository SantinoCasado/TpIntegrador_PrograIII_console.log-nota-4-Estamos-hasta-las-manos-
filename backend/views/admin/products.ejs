<div class="container-fluid py-4">
  <!-- Header con gradiente -->
  <div class="products-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h1 class="mb-1"><i class="fas fa-boxes me-2"></i>Product Management</h1>
        <p class="mb-0 opacity-75">Manage your product inventory</p>
      </div>
      <a href="/admin/dashboard/products/new" class="btn btn-light btn-lg shadow">
        <i class="fas fa-plus-circle me-2"></i>Add New Product
      </a>
    </div>
  </div>

  <!-- Filtros modernizados -->
  <div class="card mb-4 shadow-sm">
    <div class="card-body p-4">
      <div class="row g-3">
        <div class="col-md-4">
          <label for="category-filter" class="form-label fw-bold">
            <i class="fas fa-filter me-2"></i>Filter by Category
          </label>
          <select class="form-select form-select-lg" id="category-filter">
            <option value="">All Categories</option>
            <option value="hardware">Hardware</option>
            <option value="software">Software</option>
          </select>
        </div>
        <div class="col-md-4">
          <label for="status-filter" class="form-label fw-bold">
            <i class="fas fa-toggle-on me-2"></i>Filter by Status
          </label>
          <select class="form-select form-select-lg" id="status-filter">
            <option value="">All Status</option>
            <option value="true">Active</option>
            <option value="false">Inactive</option>
          </select>
        </div>
        <div class="col-md-4">
          <label class="form-label">&nbsp;</label>
          <button type="button" class="btn btn-primary btn-lg w-100 shadow-sm" onclick="loadProducts()">
            <i class="fas fa-sync-alt me-2"></i>Refresh
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabla con los productos -->
  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0" id="productsTable">
          <thead>
            <tr>
              <th class="text-center">ID</th>
              <th>Image</th>
              <th>Product Details</th>
              <th class="text-center">Category</th>
              <th class="text-center">Price</th>
              <th class="text-center">Stock</th>
              <th class="text-center">Status</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- Verifico que haya productos -->
            <% if (locals.products && products.length > 0) { %>
            <!-- Itero los productos y lleno campos-->
            <% products.forEach(product => { %>
            <tr>
              <td class="text-center align-middle fw-bold">#<%= product.id %></td>
              <td class="align-middle">
                <img
                  src="<%= product.image || '/images/no-image.svg' %>"
                  class="table-img"
                  alt="<%= product.name %>"
                  style="width: 70px; height: 70px;"
                />
              </td>
              <td class="align-middle">
                <div class="fw-bold text-dark"><%= product.name %></div>
                <small class="text-muted"><%= product.description?.substring(0, 60) %>...</small>
              </td>
              <td class="text-center align-middle">
                <span class="badge rounded-pill bg-<%= product.category === 'hardware' ? 'primary' : 'success' %> px-3 py-2">
                  <i class="fas fa-<%= product.category === 'hardware' ? 'microchip' : 'code' %> me-1"></i>
                  <%= product.category %>
                </span>
              </td>
              <td class="text-center align-middle">
                <span class="fw-bold text-success fs-5">$<%= product.price %></span>
              </td>
              <td class="text-center align-middle">
                <span class="badge bg-<%= product.stock > 10 ? 'info' : 'warning' %> px-3 py-2">
                  <%= product.stock %> units
                </span>
              </td>
              <td class="text-center align-middle">
                <span class="badge rounded-pill bg-<%= product.isActive ? 'success' : 'danger' %> px-3 py-2">
                  <i class="fas fa-<%= product.isActive ? 'check-circle' : 'times-circle' %> me-1"></i>
                  <%= product.isActive ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td class="text-center align-middle">
                <div class="btn-group" role="group">
                  <a
                    href="/admin/dashboard/products/<%= product.id %>/edit"
                    class="btn btn-sm btn-outline-primary"
                    title="Edit"
                  >
                    <i class="fas fa-edit"></i>
                  </a>
                  <% if (product.isActive) { %>
                  <button
                    type="button"
                    class="btn btn-sm btn-outline-warning toggle-status-btn"
                    data-product-id="<%= product.id %>"
                    data-action="deactivate"
                    title="Deactivate"
                  >
                    <i class="fas fa-pause"></i>
                  </button>
                  <% } else { %>
                  <button
                    type="button"
                    class="btn btn-sm btn-outline-success toggle-status-btn"
                    data-product-id="<%= product.id %>"
                    data-action="activate"
                  >
                    <i class="fas fa-play"></i>
                  </button>
                  <% } %>
                </div>
              </td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="8" class="text-center">No products found</td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Información de resultados -->
      <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
          <span id="showing-info" class="text-muted"
            >Showing 1 to 10 of <%= locals.totalProducts || products.length %>
            products.</span
          >
        </div>
      </div>

      <!-- Paginacion -->
      <nav aria-label="Products pagination">
        <ul
          class="pagination justify-content-center"
          id="pagination-container"
        ></ul>
      </nav>
    </div>
  </div>
</div>

<!-- Modal de confirmación -->
<div
  class="modal fade"
  id="confirmModal"
  tabindex="-1"
  aria-labelledby="confirmModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmModalLabel">
          <i class="fas fa-exclamation-triangle me-2"></i>Confirm Action
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p id="modal-message">Are you sure you want to perform this action?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="button" class="btn btn-primary" id="confirm-action">
          Confirm
        </button>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/productsAdmin.js"></script>
