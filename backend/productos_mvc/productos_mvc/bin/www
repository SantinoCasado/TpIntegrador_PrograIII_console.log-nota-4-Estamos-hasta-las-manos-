#!/usr/bin/env node

/**
 * Archivo de Inicio del Servidor (www)
 * Este archivo es el punto de entrada de la aplicación.
 * Configura y arranca el servidor HTTP.
 */

/**
 * Importación de dependencias
 */
var app = require('../app');                              // La aplicación Express
var debug = require('debug')('productos-mvc:server');     // Utilidad de depuración
var http = require('http');                              // Módulo HTTP de Node.js

/**
 * Configuración del puerto
 * Obtiene el puerto del entorno o usa 3000 por defecto
 * El puerto se guarda en la configuración de Express
 */
var port = normalizePort(process.env.PORT || '3000');     // Determina el puerto a usar
app.set('port', port);                                    // Lo guarda en Express

/**
 * Creación del servidor HTTP
 * Crea una instancia del servidor usando nuestra app Express
 */
var server = http.createServer(app);

/**
 * Inicio del servidor
 * Configura el servidor para escuchar en el puerto especificado
 */
server.listen(port);                     // Comienza a escuchar en el puerto
server.on('error', onError);             // Maneja errores del servidor
server.on('listening', onListening);     // Maneja el evento de inicio correcto

/**
 * Normalización del puerto
 * Convierte el valor del puerto a un número, string o false
 * @param {string|number} val - El valor del puerto a normalizar
 * @returns {number|string|boolean} El puerto normalizado
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;                          // Retorna el valor si no es un número
  }

  if (port >= 0) {
    return port;                         // Retorna el puerto si es válido
  }

  return false;                          // Retorna false si el puerto no es válido
}

/**
 * Manejador de errores del servidor
 * Se ejecuta cuando ocurre un error en el servidor
 * @param {Error} error - El error que ocurrió
 */
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;                         // Si no es error de escucha, lanza el error
  }

  // Formatea el mensaje de error según el tipo de puerto
  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // Maneja errores específicos con mensajes amigables
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requiere privilegios elevados');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' ya está en uso');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Manejador del evento "listening"
 * Se ejecuta cuando el servidor comienza a escuchar correctamente
 */
function onListening() {
  var addr = server.address();
  // Formatea el mensaje según el tipo de dirección
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'puerto ' + addr.port;
  // Muestra mensaje de depuración
  debug('Escuchando en ' + bind);
}
